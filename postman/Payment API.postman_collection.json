				{
					"name": "Initiate Payment",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"const res = pm.response.json();\r",
									"\r",
									"// Response yapısı kontrolü\r",
									"pm.test(\"success true\", function () {\r",
									"    pm.expect(res.success).to.eql(true);\r",
									"});\r",
									"\r",
									"pm.test(\"status INITIATED\", function () {\r",
									"    pm.expect(res.status).to.eql(\"INITIATED\");\r",
									"});\r",
									"\r",
									"pm.test(\"paymentId exists\", function () {\r",
									"    pm.expect(res.paymentId).to.not.be.undefined;\r",
									"});\r",
									"\r",
									"// paymentId'yi environment'a yaz\r",
									"pm.environment.set(\"paymentId\", res.paymentId);"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
